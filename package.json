{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React boilerplate for modern web projects.",
  "main": "src/index.jsx",
  "scripts": {
    "start": "webpack-cli serve --config ./webpack.config.js --mode development",
    "build": "npm run lint && cross-env NODE_ENV=production webpack --config webpack.config.js --mode production",
    "build:nocheck": "cross-env NODE_ENV=production webpack --config webpack.config.js --mode production",
    "serve": "http-server ./dist -g",
    "clean": "rm -rf node_modules",
    "lint": "eslint \"**/*.{js,jsx}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasfrsi/react-boilerplate"
  },
  "keywords": [
    "axios",
    "boilerplate",
    "jsx",
    "prop-types",
    "react",
    "redux",
    "redux-saga",
    "router",
    "webpack"
  ],
  "author": "Lucas F. Simoni",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^7.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fibers": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.3",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  }
}
